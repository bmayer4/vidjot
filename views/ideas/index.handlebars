{{#each ideas}}
    <div class="card card-body mb-2">
        <h3>{{title}}</h3>
        <p>{{details}}</p>
        <a class="font-weight-light" href="/ideas/edit/{{_id}}">Edit</a>
        <form method="post" action="/ideas/{{_id}}?_method=DELETE">
        <input type="hidden" name="_method" value="DELETE">
        <a class="font-weight-light" href="javascript:;" onclick="parentNode.submit()">Delete</a> 
        </form>
    </div>
{{else}}
    <p>No video ideas listed</p>
{{/each}}

<a href="/ideas/add"class="btn btn-dark btn-md mt-2 mb-5">Add Idea</a>